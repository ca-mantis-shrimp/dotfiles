#!/bin/bash

set -e

# This script runs in the build environment to copy extra files
# The repository will be mounted at /mnt/repo during build

echo "Copying repository contents for chezmoi setup..."

# Ensure the mount point exists
if [ ! -d "/mnt/repo" ]; then
    echo "Warning: /mnt/repo not found - repository may not be properly mounted"
    exit 0
fi

echo "Repository contents will be available during postinst phase"
